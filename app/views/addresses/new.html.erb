<h1>Address Validator</h1>

<%= form_for @address_verification, url: addresses_path do |f| %>
  <div>
    <%= f.label :street_address %>
    <%= f.text_field :street_address %>
  </div>

  <div>
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>

  <div>
    <%= f.label :state %>
    <%= f.text_field :state %>
  </div>

  <div>
    <%= f.label :zip_code %>
    <%= f.text_field :zip_code %>
  </div>

  <div class = "buttons">
    <%= f.submit 'Validate Address' %>
  </div>
<% end %>
